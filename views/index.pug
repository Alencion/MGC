extends index-layout

block content
  .index-logo
    img(src="/images/index-logo.png")
    h1.title= title
    p 충남대 커뮤니티

  .wrapper-menu
    ul.menu
      li
        a#commnunity(href="./board/university/page=1") 대학게시판
      li
        a#board(href="./board/page=1") Board
      li
        a#potal(href="http://portal.cnu.ac.kr/") Portal
      li
        a#cnuis(href="http://cnuis.cnu.ac.kr/") 통합정보시스템
    .hamburger

  div.content
    .section-list.university
      h2.list-title.university 대학게시판
      ul
        each item_university in university
          li
            a(href = "./article/id="+item_university.id)
              .item
                span.item-title= item_university.title
                span.item-date= item_university.date
                span.item-writer= item_university.user.name

      a.read-more(href = "./board/university/page=1") Read More

    .section-list.board
      h2.list-title.board-title 자유게시판
      ul
        each item_board in board
          li
            a(href = "./article/id="+item_board.id)
              .item
                span.item-title= item_board.title
                span.item-date= item_board.date
                span.item-writer= item_board.user.name

      a.read-more(href = "./board/page=1") Read More