extends signup-layout

block content
    .wrapper-signup
        form.signup
            h2 Sign Up
            label Username
            input(type="text" placeholder="User Id" name="" required)
            label Password
            input#password(type="password" placeholder="User Password" name="" required)
            label Confirm Password
            input(type="password" placeholder="Confirm Password" name="" required)
            label Name
            input(type="text" placeholder="name" name="" required)
            label e-mail
            input(type="email" placeholder="email" name="" required)
            input(type="submit" value="Register")
        .signup-side
            img(src="/images/index-logo.png")
            p Welcome to Steam