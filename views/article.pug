doctype html
html
   head
      title= title
      link(rel='stylesheet', href='/stylesheets/article.css')
      link(rel='stylesheet', href='/stylesheets/header.css')
      link(rel='stylesheet', href='/stylesheets/footer.css')
      meta(name="viewport" content="width=device-width")
      link(href="https://fonts.googleapis.com/css?family=Noto+Sans|Ubuntu" rel="stylesheet")
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
      script(type="text/javascript" src="../../scripts/header.js")
      script(type="text/javascript" src="../../scripts/hamburger.js")
   body
      block header
         include header.pug
      block content
         .wrapper-article
            .article
               h2.title #{article_title}
               .info
                  p 조회수 : #{view}
                  p 생성날짜 : #{created_date}
                  p 글쓴이 : #{writer}
               .descript
                  p #{description}

