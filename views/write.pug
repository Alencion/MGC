doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/write.css')
        link(rel='stylesheet', href='/stylesheets/header.css')
        link(rel='stylesheet', href='/stylesheets/footer.css')
        link(rel='stylesheet', href='/stylesheets/hamburger.css')
        link(href="https://fonts.googleapis.com/css?family=Noto+Sans|Ubuntu" rel="stylesheet")
        script(src='https://cdn.ckeditor.com/4.11.2/standard/ckeditor.js')
    body
        block header
            include header.pug

        block content
            .wrapper-write
                label Write
                form.write(method="post" action="./write")
                    input.title(type="text" name="title" placeholder="Title" required)
                    select.category(name="category")
                        option(value=2) 자유게시판
                        option(value=1) 대학게시판
                    // Create a tag that we will use as the editable area.
                    // You can use a div tag as well.
                    textarea.descript(name="description")
                    script.
                        CKEDITOR.replace('description');
                    input.submit(type="submit")
        block footer
            include footer.pug

